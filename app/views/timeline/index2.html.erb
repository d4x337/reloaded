<div class="page-header">
  <h1>My posts</h1>
</div>

<div id="static-pagination">
  <%= will_paginate @posts %>
</div>

<div id="my-posts">
  <div class="page-delimiter first-page" data-page="<%= params[:page] || 1 %>"></div>
  <%= render @posts %>
</div>

<% if @posts.next_page %>
    <div id="infinite-scrolling">
      <%= will_paginate @posts %>
    </div>
<% end %>