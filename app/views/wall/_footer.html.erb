              <a href="/wall"><i class="iconminiposts baseline fa fa-2x fa-clock-o" title="<%= t("timeline") %>" id="icon-received"></i></a>
            </div>

        <% end %>
      </div>

 			<div class="col-sm-2 col-xs-2">
