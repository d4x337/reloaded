  <div id="pluto" class="zerozerofixed">
 		 	<div class="row">

	 		<div class="col-sm-2 col-xs-2">
        <a href="#">
          <i class="fa fa-2x fa-pencil baseline" title="<%= t("new_post") %>" id="icon-compose-new" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo"></i>
        </a>
 			</div>

	 		<div class="col-sm-2 col-xs-2">
