

<style>
	#current_status{
		word-wrap: break-word;
	}
	.profile-container{
		
	}
	#fullname{
		font-size:26px;
		font-family: Impact;
		font-stretch:expanded;
		color:#CB9900;
		text-shadow:3px 3px 3px black;
	}
	.lime{
		color:lime;
	}
</style>
<script language="JavaScript">
	$( document ).ready(function() {
		$('#icon-profile').css('color','lime');
		$('#icon-received').css('color','grey');
		$('#icon-sent').css('color','grey');
		$('#icon-contacts').css('color','grey');
		$('#icon-settings').css('color','grey');
		
	});	
</script>

<div class="profile-container">
	<div class="row">
		<div class="col-sm-1 col-xs-0">
		</div>
		<div class="col-sm-4 col-xs-5 alignleft">
			 <% if current_user.avatar(:thumb).present? %>
           	 	<img class="chat-avatara alignleft round5" src="<%= current_user.avatar.url(:thumb) %>" alt="" width="100">
           	 <% else %>
        		<img class="chat-avatara round5" src="/images/missing_avatar.png" alt="" width="100">
   			 <% end %>
		 </div>
		 <div class="col-sm-6 col-xs-7">
		 		<h3 class="white bold" id="fullname"><%=current_user.firstname%></h3>
		 		<h4 class="white" id="username">@<%=current_user.nickname%></h4>
		 		<% if current_user.headline.present? %>
					<h5><%= current_user.headline %></h5>
                <% end %>
		 </div>
	</div>
	
	<br />
	
	<div class="row">
		<div class="col-sm-1 col-xs-0">
			 
		 </div>
		 <div class="col-sm-4 col-xs-4">
			<p class="grey" align="left"><%= t('status') %></p> 
		 </div>
		 <div class="col-sm-6 col-xs-8" id="current_status">
		 	<p class="yellow" align="left"><%=get_current_status(current_user.id)%></p>
		 </div>
	</div>	
	
	<div class="row">
		<div class="col-sm-1 col-xs-0">
			 
		 </div>
		 <div class="col-sm-4 col-xs-4">
			<p class="grey" align="left"><%= t('set on') %></p> 
		 </div>
		 <div class="col-sm-6 col-xs-8">
		 	<p class="white" align="left">
		 		<% if has_set_at_status?(current_user.id) %>
		 			<%= last_status_set(current_user.id).to_s(:short)%>&nbsp;-&nbsp;<%= time_ago_in_words(last_status_set(current_user.id)) %>&nbsp;<%= t('ago') %></p>
		 		<% else %>
		 			<%= t('never') %>
		 		<% end %>
		 </div>
	</div>	
  	<% if current_user.online? %>
		<div class="row">
			<div class="col-sm-1 col-xs-0">
			 </div>
			 <div class="col-sm-4 col-xs-4">
    			<p class="grey" align="left"><%= t('last seen') %></p> 
   			 </div>
   			 <div class="col-sm-6 col-xs-8">
   			 	<p class="lime" align="left"><%= image_tag "online.png" %>&nbsp; <%= t('online') %></p>
   			 </div>
		</div>	
    <% else %>	
		<% if current_user.last_seen.present? %>
			<div class="row">
				 <div class="col-sm-1 col-xs-0">
			 	 </div>
				 <div class="col-sm-4 col-xs-4">
        			<p class="grey" align="left"><%= t('last seen') %></p> 
       			 </div>
       			 <div class="col-sm-6 col-xs-8">
       			 	<p class="white" align="left"><%= current_user.last_seen.to_s(:short)%>&nbsp;-&nbsp;<%= time_ago_in_words(current_user.last_seen) %>&nbsp;<%= t('ago') %></p>
       			 </div>
			</div>	
		<% else %>
			<div class="row">
				 <div class="col-sm-1 col-xs-0">
			 	 </div>
				 <div class="col-sm-4 col-xs-4">
        			<p class="grey" align="left"><%= t('last seen') %></p> 
       			 </div>
       			 <div class="col-sm-6 col-xs-8">
       			 	<p class="white" align="left"><%= t('never') %></p>
       			 </div>
			</div>
   	  	<% end %> 
    <% end %>
    
    <% if current_user.mobile.present? and current_user.show_mobile %>
		<div class="row">
			 <div class="col-sm-1 col-xs-0">
			 </div>
			 <div class="col-sm-4 col-xs-4">
    			<p class="grey" align="left"><%= t('mobile') %></p> 
   			 </div>
   			 <div class="col-sm-6 col-xs-8">
   			 	<p class="white" align="left"><%= current_user.mobile %></p>
   			 </div>
		</div>
    <% end %>
    
    <% if current_user.email.present? and current_user.show_email %>
		<div class="row">
			 <div class="col-sm-1 col-xs-0">
			 </div>
			 <div class="col-sm-4 col-xs-4">
    			<p class="grey" align="left"><%= t('email') %></p> 
   			 </div>
   			 <div class="col-sm-6 col-xs-8">
   			 	<p class="white" align="left"><%= current_user.email %></p>
   			 </div>
		</div>
    <% end %>

	<div class="row">
		 <div class="col-sm-1 col-xs-0">
		 </div>
		 <div class="col-sm-4 col-xs-4">
			<p class="grey" align="left"><%= t('member since') %></p> 
		 </div>
		 <div class="col-sm-6 col-xs-8">
		 	<p class="white" align="left"><%= current_user.created_at.to_s(:short) %>&nbsp;-&nbsp;<%= time_ago_in_words(current_user.created_at) %>&nbsp;<%= t('ago')%></p>
		 </div>
	</div>

</div>
 