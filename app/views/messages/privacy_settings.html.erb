<h4 class="white">Privacy Settings</h4>
<br />
<%= form_for(current_user)  do |f| %>
	<div class="row">
		<div class="col-sm-7 col-xs-7">
			<h5 align="left" class="white"><i class="fa fa-envelope-o white"></i>&nbsp;&nbsp;Email Address</h5>
  		</div>
		<div class="col-sm-5 col-xs-5">
			<%= f.select(:email_privacy,options_for_select([['Everybody', '0'],['My Contacts Only', '1'],['Nobody', '2']],current_user.email_privacy),{},{:class=>'btn btn-dark block full-width m-b'}) %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-7 col-xs-7">
			<h5 align="left" class="white"><i class="fa fa-cog white"></i>&nbsp;&nbsp;Show Photo </h5>
  		</div>
		<div class="col-sm-5 col-xs-5">
			<%= f.select(:picture_privacy,options_for_select([['Everybody', '0'],['My Contacts Only', '1'],['Nobody', '2']],current_user.picture_privacy),{},{:class=>'btn btn-dark block full-width m-b'}) %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-7 col-xs-7">
			<h5 align="left" class="white"><i class="fa fa-comment white"></i>&nbsp;&nbsp;Show Status </h5>
    	</div>
		<div class="col-sm-5 col-xs-5">
			<%= f.select(:status_privacy,options_for_select([['Everybody', '0'],['My Contacts Only', '1'],['Nobody', '2']],current_user.status_privacy),{},{:class=>'btn btn-dark block full-width m-b'}) %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-7 col-xs-7">
			<h5 align="left" class="white"><i class="fa fa-user white"></i>&nbsp;&nbsp;Show Last Access </h5>
    	</div>
		<div class="col-sm-5 col-xs-5">
			<%= f.select(:last_access_privacy,options_for_select([['Everybody', '0'],['My Contacts Only', '1'],['Nobody', '2']],current_user.last_access_privacy),{},{:class=>'btn btn-dark block full-width m-b'}) %>
		</div>
	</div>
	<br />
	<%= f.submit d4x_sanitizer(t('update')),:class=>'btn btn-outline-primary block full-width m-b' %>
<% end %>
</div>
</div>
<div class="card">
  <div class="card-body">

<%= form_for(current_user, :html => { :multipart => true })  do |f| %>
    <% if current_user.errors.any? %>
        <h5><%= pluralize(current_user.errors.count, "error") %> prohibited from being saved:</h5>
        <ul>
          <% current_user.errors.full_messages.each do |msg| %>
              <li><%= d4x_sanitizer(msg) %></li>
          <% end %>
        </ul>
    <% end %>
    <h3 class="white"><%= t('choose your language') %></h3>
    <%= image_tag("us.png",:alt=>"English",:title=>'English',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("es.png",:alt=>"Spanish",:title=>'Spanish',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("fr.png",:alt=>"French",:title=>'French',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("de.png",:alt=>"German",:title=>'German',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("england.png",:alt=>"English",:title=>'English',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("pt.png",:alt=>"Portuguese",:title=>'Portuguese',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("it.png",:title=>'Italian',:alt=>"Italian",:class=>'d4xicon')%>&nbsp;
    <%= image_tag("nl.png",:alt=>"Dutch",:title=>'Dutch',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("ru.png",:alt=>"Russian",:title=>'Russian',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("cn.png",:alt=>"Chinese",:title=>'Chinese',:class=>'d4xicon') %>&nbsp;
    <%= image_tag("se.png",:alt=>"Swedish",:title=>'Swedish',:class=>'d4xicon') %>&nbsp;
    <br /><br />
    <div class="row">
      <div class="col-sm-12  col-xs-12">
        <%= f.select(:locale,options_for_select([['English', 'en'],['Italian', 'it'],['Spanish', 'es'],['Portoguese', 'pt'],['French', 'fr'],['Dutch', 'nl'],['German', 'de'],['Swedish', 'se'],['Russian', 'ru'],['Chinese', 'cn']],current_user.locale),{},{:class=>'btn btn-dark block full-width m-b'}) %>
      </div>
    </div>
    <%= f.submit d4x_sanitizer(t('update')),:class=>'btn btn-outline-primary block full-width m-b' %>
<% end %>

  </div>
</div>