<%= form_for(@user) do |f| %>
      <h4 class="bluesocial"><%= t("edit profile")%>&nbsp;<%= @user.firstname	%></h4>
      <br>
      <div class="form-group">
          <label class="control-label col-sm-4 col-xs-4" for="first-name"><%= t("fullname")%>&nbsp;<span class="required">*</span></label>
          <div class="col-sm-8 col-xs-8">
         <%= f.text_field :firstname,:value=>@user.firstname,:class=>'form-control input-transparent'  %>
          </div>
      </div>
      <br>
      <div class="form-group">
          <label class="control-label col-sm-4 col-xs-4" for="last-name"><%= t("headline")%>&nbsp;</label>
          <div class="col-sm-8">
           <%= f.text_field :headline,:value=>@user.headline,:class=>'form-control input-transparent'  %>
          </div>
      </div>
      <br>
      <div class="form-group">
          <label image_tag for="date-of-birth" class="control-label col-sm-4"><%= t("birthday")%>&nbsp;</label>
          <div class="col-sm-8">
            <div class="input-group">
              <div class="form-group">
                <%= f.date_field :birthday,:value=>@user.birthday,:class=>'form-control date-picker',:placeholder=>"Pick a date" %>
                <i class="form-group__bar"></i>
              </div>
            </div>
          </div>
      </div>
      <br>
    <div class="form-group">
      <label class="control-label col-sm-4 col-xs-4" for="last-name"><%= t("gender")%>&nbsp;</label>
      <div class="col-sm-8">
        <%= f.select(:gender,options_for_select([[t('male'), 'M'], [t('female'), 'F']], @user.gender),{}, { :class => 'select2 form-control input-transparent' }) %>
      </div>
    </div>
    <br>
    <h5 class="orange">
      <%= t("contact")%>
    </h5>
    <br>
      <div class="form-group">
          <label id="email-label" for="email" class="control-label col-sm-4"><%= t("email")%>&nbsp;<span class="required">*</span></label>
          <div class="col-xs-12 col-sm-8">
              <div class="input-group">
                  <%= f.email_field :email,:value=>@user.email,:class=>'form-control input-transparent'  %>
              </div>
          </div>
      </div>
      <br>
      <div class="form-group">
          <label for="phone" class="control-label col-sm-4"><%= t("mobile")%>&nbsp;<span class="required">*</span></label>
          <div class="col-xs-12 col-sm-8">
              <div class="input-group">
                    <%= f.text_field :mobile,:value=>@user.mobile,:class=>'form-control input-transparent mask'  %>
              </div>
          </div>
      </div>
    <br>
      <div class="form-group">
          <label for="phone" class="control-label col-sm-4">Skype</label>
            <div class="col-xs-12 col-sm-8">
