                    <%= f.text_field :skype_id,:value=>@user.skype_id,:class=>'form-control input-transparent mask'  %>
              </div>
          </div>
      </div>
      <br>
      <div class="form-group">
          <label for="phone" class="control-label col-sm-4">Facebook</label>
