              <div class="input-group">
                    <%= f.text_field :facebook_user,:value=>@user.facebook_user,:class=>'form-control'   %>
              </div>
          </div>
      </div>
      <br>
      <div class="form-group">
          <label for="twitter" class="control-label col-sm-4">Twitter</label>

          <div class="col-xs-12 col-sm-8">
              <div class="input-group">
                    <%= f.text_field :twitter_user,:value=>@user.twitter_user,:class=>'form-control input-transparent mask'  %>
              </div>
          </div>
      </div>
