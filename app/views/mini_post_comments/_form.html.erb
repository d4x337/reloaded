<%= form_for([@mini_posts, @mini_posts.mini_post_comment.build]) do |f| %>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author_id %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content ,nil,:cols=>70,:rows=>2 %></div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
