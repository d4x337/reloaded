<%= form_for(@update) do |f| %>
  <% if @update.errors.any? %>
    <div  id="login-messages" class="ui-widget">
		<div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
			<p align="center"><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
			<strong class="error-counter"><%= pluralize(@update.errors.count, t("error")) %> :</strong> </p>
			 <div id="error-list">
				 <% @update.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      <br />
		      </div>
		</div>
	</div>
	<br />
  <% end %>
 <div class="field">
    <%= f.label t(:sender) %><br />
    <%= f.text_field :sender_id %>
  </div><br>
  <div class="field">
    <%= f.label t(:destination) %><br />
    <%= f.text_field :target_id %>
  </div><br>
  <div class="field">
    <%= f.label t(:reason) %><br />
    <%= f.text_field :reason %>
  </div><br>
  <div class="field">
    <%= f.label t(:message) %><br />
    <%= f.text_field :message %>
  </div><br>
  <div class="field">
    <%= f.label t(:read) %><br />
    <%= f.text_field :read %>
  </div><br>
  <div class="field">
    <%= f.label t(:created) %><br />
    <%= f.text_field :created_at %>
  </div><br>
 
  <div class="actions">
   <%= f.submit :class=>'button-d4x' %>
  </div>
  <br>
<% end %>
