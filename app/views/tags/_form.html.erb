<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
     <div  id="login-messages" class="ui-widget">
		<div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
			<p align="center">
			<strong class="error-counter"><%= pluralize(@tag.errors.count, t("error")) %> :</strong> </p>
			 <div id="error-list">
				 <% @tag.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      <br />
		      </div>
		</div>
	</div>
	<br />
  <% end %>
  <div id="center-content">
  
  <div class="field">
      <%= f.text_field :name,:class=>'form-control input-sm',:placeholder=>'Set New Tag Here' %>
  </div>
  <br />
  <div class="field">
     <%= f.text_field :slug,:class=>'form-control input-sm',:placeholder=>'Define Slug (downcase only)' %>
  </div>
  <br />
  <div class="actions">
   	<%= f.submit :class=>'btn btn-warning  btn-sm block full-width m-b' %>
  </div>
  
  </div>
<% end %>
