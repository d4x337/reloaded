<%= form_tag charges_path do -%>
    <article>
      <%= label_tag 'amount', 'To Pay', class: 'amount' %>
      <%= label_tag 'amount', "$#{@amount}.00", class: 'amount-figure' %>
    </article>
    <p>
      <%= label_tag(:couponCode, 'Coupon:') %>
      <%= text_field_tag(:couponCode) %>
    </p>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= 'pk_test_SfsdbExmYxdspINdi19kzCBT' %>"
            data-description="Rails Stripe customer"
            data-amount="<%= @amount * 100 %>">
    </script>
<% end %>
