<%= form_for(@country) do |f| %>
  <% if @country.errors.any? %>
      <h3><%= pluralize(@country.errors.count, "error") %> prohibited this country from being saved:</h3>
      <ul>
	      <% @country.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
  <% end %>
  
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
	<div class="col-lg-12">
	<div class="ibox float-e-margins">
	<div class="ibox-title">
	    <h5><%= t('countries')%></h5>
	    <div class="ibox-tools">
    		<%= link_to countries_path do %>
    			<i class="fa fa-arrow-left"></i>
    		<% end %>
	        <a class="collapse-link">
	            <i class="fa fa-chevron-up"></i>
	        </a>
	        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
	            <i class="fa fa-wrench"></i>
	        </a>
	        <a class="close-link">
	            <i class="fa fa-times"></i>
	        </a>
	    </div>
	</div>
	<div class="ibox-content">
		<div class="field">
		    <%= f.label :country_name %>
		    <%= f.text_field :country_name,:class=>'form-control'%>
	    </div><br>
	    <div class="field">
		    <%= f.label :country_code %>
		    <%= f.text_field :country_code,:class=>'form-control'%>
	    </div><br>
	   <div class="actions">
	     	<%= link_to t('cancel'), countries_path,:class=>'btn btn-warning' %>
	     	<span class="pull-right font-noraml"><%= f.submit t('save'),:class=>'btn btn-success' %></span>
		    
	    </div>
	</div>
</div>
</div>
