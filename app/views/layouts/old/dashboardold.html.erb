<!DOCTYPE HTML>
<html>
	<head>
			<meta http-equiv="content-type" content="text/html; charset=utf-8" />
			<title><%= get_setting_value('PROJECT_NAME') %></title>
		    <meta charset="utf-8">
		    <meta http-equiv="X-UA-Compatible" content="IE=edge">
		    <meta name="viewport" content="width=device-width,height=device-height,initial-scale=1.0"/>
		    <meta name="description" content="<%= get_setting_value('PROJECT_MOTTO') %>">
		    <meta name="author" content="<%= get_setting_value('PROJECT_AUTHOR')%>">
    		<meta name="keywords" content="" />
	
			<%= csrf_meta_tags %>

			<%= javascript_include_tag "jquery-ui-1.9.2.custom/js/jquery-1.8.3.js" %>
			<%= javascript_include_tag "jquery-ui-1.9.2.custom/js/jquery-ui-1.9.2.custom.js" %>
			
		  
			<%= javascript_include_tag "/js/skel.min.js" %>
			<%= javascript_include_tag "/js/init.js" %>

 	<%= yield :javascript_includes %>
	<%= yield :head %>
			<noscript>
				<% stylesheet_link_tag "/stylesheets/css/arial/skel.css" %>
				<%= stylesheet_link_tag "/stylesheets/css/arial/style.css" %>
				<%= stylesheet_link_tag "/stylesheets/css/arial/style-wide.css" %>
				<%= stylesheet_link_tag "/stylesheets/css/arial/style-noscript.css" %>
			</noscript>
	</head>
	<body>
		<div id="wrappers">
			<div id="bg"></div>
			<div id="overlay"></div>
			<div id="main">
					<header id="header">
						
						<h1>d4x337</h1>
						<h2>Admin Dashboard</h2>

						<% if not alert.blank? %>
							<%= label_tag(d4x_sanitizer(alert)) %> 
						<% end %>
						<% if not notice.blank? %>
							<%= label_tag(d4x_sanitizer(notice)) %> 
						<% end %>
						<div id ="content">
					 		 <%= yield %><%= render :partial => "/index/footer_resp" %>
						</div>
   					</header>
					<footer id="footer">
						<%= yield :footer %>
  					</footer>
			</div>
		</div>
	</body>
</html>
