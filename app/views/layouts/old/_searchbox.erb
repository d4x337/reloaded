<%= form_for("user", :url => user_session_path,:html=>{:class=>'navbar-form navbar-right',:role=>'form'}) do |g| %>
 
    <div class="form-group">
	  <%= g.text_field :email ,:class=> "form-control",:placeholder=>"Email",:size =>"21",:id=>'user_email_login',:maxlength=>50 ,:onkeypress=>"return restrictInput(this, event, integerOnly);" %>&nbsp;&nbsp;
    </div>
    <div class="form-group">
	  <%= g.password_field :password ,:class=> "form-control",:placeholder=>"Password",:size =>"21",:id=>'user_pass_login',:maxlength=>50 %>&nbsp;&nbsp;
    </div>

	<%= image_tag "login-spinner.gif",:class=>'none',:id=>'login-spinner'%>
	<span id="spinner-pl" height='16' width='16'>&nbsp;&nbsp;&nbsp;&nbsp;</span>

    <button id="bt-signin" type="submit" class="btn btn-success"><%= d4x_sanitizer(t("login")) %></button>

<% end %>
