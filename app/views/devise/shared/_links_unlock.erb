<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("registration"), new_registration_path(resource_name) ,:id=>'signup-link'%> |
<% end -%>
<%- if controller_name != 'sessions' %>
    <%= link_to t("login"), new_session_path(resource_name) ,:id=>'login-link'%> |
<% end -%>


<%- if devise_mapping.confirmable? && controller_name != 'registrations' %>
  <%= link_to t("confirm address"), new_confirmation_path(resource_name),:id=>'confirm-link' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("Didn't receive unlock instructions?"), new_unlock_path(resource_name) %>
<% end -%>
<br>
<%= link_to t("activate_account"), '/activation' ,:id=>'activation-link'%>  |

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to t("forgot password"), new_password_path(resource_name) ,:id=>'forgot-link'%>
<% end -%>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
  <% end -%>
<% end -%>
