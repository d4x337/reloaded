<% content_for :head do %>
  <%= javascript_include_tag "d4x-forgot-unlock" %>
  <%= javascript_include_tag "d4x-signin" %>
<% end %>
<div class="login__block active" id="l-login">
  <div class="login__block__header">
    <i class="zmdi zmdi-account-circle"></i>
    <h4 class="orange"><%= d4x_sanitizer(t("forgot password")) %></h4><br>
    <%= t("enter your address and the reset link will be sent to you") %>
    <div class="actions actions--inverse login__block__actions">
      <div class="dropdown">
        <i data-toggle="dropdown" class="zmdi zmdi-more-vert actions__item"></i>
        <div class="dropdown-menu dropdown-menu-right ddd4x">
          <%= render :partial => 'devise/shared/dropdown_confirmation' %>
        </div>
      </div>
    </div>
  </div>

  <div class="login__block__body">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off",:class=>'form-control center',:placeholder=>t('new password')%>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off",:class=>'form-control center',:placeholder=>t('confirm')%>
      </div>
      <%= f.submit t("change password"), :id => "bt-signin",:class=>'btn btn-sm btn-outline-success block full-width m-b'  %>

    <% end %>
  </div>
  <%= render :partial => '/shared/devise_footer' %>
</div>

