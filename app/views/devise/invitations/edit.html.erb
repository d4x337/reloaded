<br><br><br>
<div class="middle-box text-center animated  ibox-content devise_login">
      <%= render :partial => "/shared/devise_header_logo" %>
      <h2 class="font-bold center"><%= t 'devise.invitations.edit.header' %></h2>
      <div class="row">
          <div class="col-lg-12">
          <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
              <%= devise_error_messages! %>
              <%= f.hidden_field :invitation_token %>

              <p><%= f.label :password %><br />
              <%= f.password_field :password,:class=>'form-control center' %></p>

              <p><%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation,:class=>'form-control center' %></p>
                <%= f.submit t("devise.invitations.edit.submit_button"),:class=>'btn btn-md btn-block btn-d4x' %>

            <% end %>
          </div>
      </div>
      <br />
</div>
