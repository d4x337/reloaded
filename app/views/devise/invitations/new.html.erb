<br><br><br>
<div class="middle-box text-center animated  ibox-content devise_login">
      <%= render :partial => "/shared/devise_header_logo" %>
      <h3 class="font-bold center"><%= t "devise.invitations.new.header" %></h3>
      <p><%= t("enter your address and the reset link will be sent to you") %></p>
      <div class="row">
          <div class="col-lg-12">
          <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
                <%= devise_error_messages! %>
                    <% resource.class.invite_key_fields.each do |field| -%>
                 <p><%= f.label field %><br />
                  <%= f.text_field field,:class=>'form-control center' %></p>
              <% end -%>
               <%= f.submit t("devise.invitations.new.submit_button"),:class=>'btn btn-large btn-block btn-d4x' %>
          <% end %>
          </div>
      </div>
      <br />
      <%= render :partial => "/shared/devise_footer" %>
</div>
