<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
   <div  id="login-messages" class="ui-widget">
		<div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
			<p align="center"><strong class="error-counter"><%= pluralize(@request.errors.count, t("error")) %> :</strong></p>
			 <div id="error-list">
				 <% @request.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      <br />
		      </div>
		</div>
	</div>
	<br />
  <% end %>
  
  <div id="center-content">
  <div class="field">
    <%= f.label t(:id) %><br />
    <%= f.text_field :id %>
  </div><br>
  <div class="field">
    <%= f.label t(:target_id) %><br />
    <%= f.text_field :target_id %>
  </div><br>
   <div class="field">
    <%= f.label t(:relation) %><br />
    <%= f.text_field :relation %>
  </div><br>
  <div class="field">
    <%= f.label t(:message) %><br />
    <%= f.text_area :message %>
  </div><br>
  <div class="field">
    <%= f.label t(:status) %><br />
    <%= f.text_field :status %>
  </div><br>
  <div class="actions">
   <%= f.submit :class=>'button-d4x' %>
  </div>
  <br>
<% end %>
</div>
